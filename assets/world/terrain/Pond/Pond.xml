<?xml version="1.0" encoding="UTF-8"?>
<!-- Pond Asset Definition
     Water source with Drinkable capability.
     Used by colonists to restore thirst.
-->
<AssetDefinitions>
  <AssetDef>
    <defName>Terrain_Pond</defName>
    <label>Pond</label>
    <assetType>simple</assetType>
    <svgPath>pond.svg</svgPath>
    <worldHeight>2.0</worldHeight>

    <rendering>
      <complexity>simple</complexity>
      <tier>instanced</tier>
    </rendering>

    <!-- Entity capabilities - water source for colonists -->
    <capabilities>
      <drinkable quality="normal"/>
    </capabilities>

    <!-- Per-biome placement configuration -->
    <placement>
      <!-- Grassland: Scattered small ponds -->
      <biome name="Grassland">
        <spawnChance>0.005</spawnChance>
        <distribution>spaced</distribution>
        <spacing>
          <minDistance>20.0</minDistance>
        </spacing>
      </biome>

      <!-- Forest: Near water tiles -->
      <biome name="Forest">
        <spawnChance>0.008</spawnChance>
        <distribution>spaced</distribution>
        <spacing>
          <minDistance>15.0</minDistance>
        </spacing>
      </biome>

      <!-- Wetland: Common near water -->
      <biome name="Wetland" near="Water" distance="3.0">
        <spawnChance>0.02</spawnChance>
        <distribution>spaced</distribution>
        <spacing>
          <minDistance>10.0</minDistance>
        </spacing>
      </biome>

      <!-- Groups this asset belongs to -->
      <groups>
        <group>water_sources</group>
        <group>terrain_features</group>
      </groups>

      <!-- Relationships with other entities -->
      <relationships>
        <!-- Ponds don't spawn near each other -->
        <avoids type="same" distance="15.0" penalty="0.0"/>
        <!-- Ponds can be near trees (for shade) -->
        <affinity group="trees" distance="5.0" strength="1.2"/>
      </relationships>
    </placement>

    <!-- Single variant for simple asset -->
    <variantCount>1</variantCount>
  </AssetDef>
</AssetDefinitions>
