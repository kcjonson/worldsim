<?xml version="1.0" encoding="UTF-8"?>
<!-- Colonist Asset Definition
     Top-down humanoid silhouette for dynamic entities.
     Spawned by ECS, not by world generation placement rules.
-->
<AssetDefinitions>
  <AssetDef>
    <defName>Colonist</defName>
    <label>Colonist</label>
    <description>A human colonist that can move, work, and interact with the world</description>

    <assetType>simple</assetType>

    <!-- Path relative to this asset folder -->
    <svgPath>colonist.svg</svgPath>
    <!-- World height in meters - approximately 1m diameter for top-down view -->
    <worldHeight>1.0</worldHeight>

    <rendering>
      <!-- Simple = GPU instanced rendering -->
      <complexity>simple</complexity>
      <tier>instanced</tier>
      <!-- Colonists are dynamic entities, typically low count -->
      <maxInstances>1000</maxInstances>
    </rendering>

    <!-- No placement rules - colonists are spawned dynamically by ECS -->
  </AssetDef>
</AssetDefinitions>
